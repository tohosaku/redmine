<h2><%= l(:label_statistics) %></h2>

<div class="repository-graph" data-controller="repositories--stats" data-repositories--stats-url-value="<%= url_for(:controller => 'repositories',
      :action => 'graph', :id => @project,
      :repository_id => @repository.identifier_param,
      :graph => "commits_per_month") %>"
      data-repositories--stats-revision-value="<%= l(:label_revision_plural) %>" data-repositories--stats-change-value="<%= l(:label_change_plural) %>" data-repositories--stats-title-value="<%= l(:label_commits_per_month) %>">
  <canvas id="commits_per_month" data-repositories--stats-target="canvas"></canvas>
</div>

<div class="repository-graph" data-controller="repositories--stats" data-repositories--stats-url-value="<%= url_for(:controller => 'repositories',
      :action => 'graph', :id => @project,
      :repository_id => @repository.identifier_param,
      :graph => "commits_per_author") %>"
      data-repositories--stats-revision-value="<%= l(:label_revision_plural) %>" data-repositories--stats-change-value="<%= l(:label_change_plural) %>" data-repositories--stats-title-value="<%= l(:label_commits_per_author) %>">
  <canvas id="commits_per_author"></canvas>
</div>

<p><%= link_to l(:button_back), :action => 'show', :id => @project %></p>

<% html_title(l(:label_repository), l(:label_statistics)) -%>

<% content_for :header_tags do %>
  <%= javascript_include_tag "chart.min" %>
<% end %>
