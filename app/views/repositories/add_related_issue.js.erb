<% if @issue %>
  $('#related-issues').html('<%= escape_javascript(render :partial => "related_issues", :locals => {:issue_to_highlight => @issue.id}) %>');
  $('#issue_id').focus();
<% else %>
  alert("<%= raw(escape_javascript(l(:label_issue) + ' ' + l('activerecord.errors.messages.invalid'))) %>");
<% end %>
