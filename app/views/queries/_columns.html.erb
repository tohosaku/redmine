<% tag_id = tag_name.gsub(/[\[\]]+/, '_').sub(/_+$/, '') %>
<% available_tag_id = "available_#{tag_id}" %>
<% selected_tag_id = "selected_#{tag_id}" %>

<div class="query-columns">
      <%= label_tag available_tag_id, l(:description_available_columns) %>
      <%= select_tag 'available_columns',
              options_for_select(query_available_inline_columns_options(query)),
              :id => available_tag_id,
              :multiple => true, :size => 10,
              :data => { :controller => 'queries--columns',
                         :action => 'dblclick->queries--columns#moveOptions',
                         :queries__columns_from_param => available_tag_id,
                         :queries__columns_to_param => selected_tag_id } %>
</div>
<%= tag.div class: 'buttons', data: { controller: 'queries--columns' } do %>
  <%= button_tag "&#8594;", class: "move-right", data: { action: 'queries--columns#moveOptions', queries__columns_from_param: available_tag_id, queries__columns_to_param: selected_tag_id } %>
  <%= button_tag "&#8592;", class: "move-left",  data: { action: 'queries--columns#moveOptions', queries__columns_from_param: selected_tag_id,  queries__columns_to_param: available_tag_id } %>
<% end %>
<div class="query-columns">
      <%= label_tag selected_tag_id, l(:description_selected_columns) %>
      <%= select_tag tag_name,
              options_for_select(query_selected_inline_columns_options(query)),
              :id => selected_tag_id,
              :multiple => true, :size => 10,
              :data => { :controller => 'queries--columns-submit queries--columns',
                         :action => 'dblclick->queries--columns#moveOptions',
                         :queries__columns_from_param => selected_tag_id,
                         :queries__columns_to_param => available_tag_id } %>
</div>
<%= tag.div class: 'buttons', data: { controller: 'queries--columns' } do %>
  <%= button_tag "&#8648;",data: { action: 'queries--columns#moveOptionTop', queries__columns_id_param: selected_tag_id } %>
  <%= button_tag "&#8593;",data: { action: 'queries--columns#moveOptionUp', queries__columns_id_param: selected_tag_id } %>
  <%= button_tag "&#8595;",data: { action: 'queries--columns#moveOptionDown', queries__columns_id_param: selected_tag_id } %>
  <%= button_tag "&#8650;",data: { action: 'queries--columns#moveOptionBottom', queries__columns_id_param: selected_tag_id } %>
<% end %>
