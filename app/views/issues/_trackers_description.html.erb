<% if trackers.any? {|t| t.description.present? } %>
  <%= modal_dialog "trackers_description", l(:label_trackers_description), data: { controller: 'modal' } do %>
    <dl>
    <% trackers.each do |tracker| %>
      <% if tracker.description.present? %>
        <dt><%= link_to tracker.name, '#', data: { action: 'issues--select#select modal#hide', issues__select_id_param: tracker.id }, title: l(:text_select_apply_tracker) %></dt>
        <dd><%= tracker.description %></dd>
      <% end %>
    <% end %>
    </dl>
  <% end %>
<% end %>
